<div class="login">
  <div class="container">
    <div class="form">

    <h1>Sign up</h1>
    <%= form_for(@user) do |form| %>
      <div class="form">
        <%= form.label :first_name %><br>
        <%= form.text_field :first_name %>

        <%= form.label :last_name %><br>
        <%= form.text_field :last_name %>

        <%= form.label :email %><br>
        <%= form.text_field :email %>

        <%= form.label :password %><br>
        <%= form.password_field :password %>

        <%= form.label :password_again %><br>
        <%= form.password_field :password_again %>
      </div>
      <div ">
        <%= form.submit 'Signup', :name => 'signup', :class => 'btn-submit' %>
      </div>
    <% end %>


    </div>
  </div>
</div>
